#include <stdio.h>
#define TRUE 1
#define FALSE 0
#define MAX 1000

int main (){
    char nomes [MAX][MAX];
    int quantidade, i;
    i = 0;

    FILE *arq;
    arq = fopen ("listaDeConvidados.txt", "r");

    if(!arq){
        printf ("Nao achamo a lista de convidado, noemia as coisas direito porra\n");
    }
    for (quantidade = 0; nomes [0][quantidade - 1] != 'F' && nomes [1][quantidade - 1] != 'I' && nomes [2][quantidade - 1] != 'M'; quantidade ++){
        fscanf (arq, "%s", &nomes [0][quantidade]);
    }

    printf ("O numero de convidados e': %d", quantidade - 1);

    arq = fclose (arq);

    return 0;
}
